---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout title={`${frontmatter.title} — Команда`} description={frontmatter.role}>
  <section class="container">
    <article class="prose">
      <h1>{frontmatter.title}</h1>
      {frontmatter.avatar && <img src={frontmatter.avatar} alt={frontmatter.title} />}
      <p><strong>{frontmatter.role}</strong></p>
      <slot />
    </article>
  </section>
</BaseLayout>
